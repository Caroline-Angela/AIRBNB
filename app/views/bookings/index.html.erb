<%= stylesheet_link_tag 'bookings', media: 'all' %>

<% if @bookings.present? %>
  <table>
    <thead>
      <tr>
        <th>Flat</th>
        <th>Start Date</th>
        <th>End Date</th>
        <th>Status</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @bookings.each do |booking| %>
        <tr>
          <td><%= booking.flat.title %></td>
          <td><%= booking.start_date %></td>
          <td><%= booking.end_date %></td>
          <td><%= booking.status %></td>
          <td>
            <%= link_to 'Edit', edit_booking_path(booking), class: 'btn btn-warning' %>
            <%= link_to 'Delete', booking_path(booking), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>No bookings found for this flat.</p>
<% end %>
