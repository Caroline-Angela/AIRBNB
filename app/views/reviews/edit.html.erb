<div class="container mt-4">
  <div class="card">
    <div class="card-body">
      <h1 class="card-title">Edit Review</h1>

      <%= simple_form_for([@flat, @review]) do |f| %>
        <%= f.input :rating,
            collection: 1..5,
            required: true %>
        <%= f.input :comment,
            required: true,
            input_html: { minlength: 10 } %>
        <div class="mt-3">
          <%= f.button :submit, "Update Review", class: "btn btn-primary" %>
          <%= link_to "Cancel", flat_path(@flat), class: "btn btn-secondary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
