<%= link_to 'Back to Flats', flats_path, class: 'btn btn-secondary' %>
<h1>Add a New Flat</h1>

<%= form_with model: @flat, url: flats_path, local: true do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :price %>
    <%= f.number_field :price, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :address %>
    <%= f.text_field :address, class: "form-control" %>
  </div>

  <%= f.submit "Create Flat", class: "btn btn-success" %>
<% end %>
