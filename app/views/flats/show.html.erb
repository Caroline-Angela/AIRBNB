<h1><%= @flat.title %></h1>
<p><%= @flat.description %></p>
<p><strong>Price:</strong> <%= number_to_currency(@flat.price) %></p>

<h3>Make a Booking</h3>
<%= form_with model: @booking, url: flat_bookings_path(@flat), local: true do |form| %>
  <div class="form-group">
    <%= form.label :start_date %>
    <%= form.date_field :start_date, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.label :end_date %>
    <%= form.date_field :end_date, class: 'form-control' %>
  </div>
  <%= form.hidden_field :flat_id, value: @flat.id %>
  <div class="form-group">
    <%= form.submit 'Book Now', class: 'btn btn-primary' %>
  </div>
<% end %>

<%= link_to 'Back to Flats', flats_path, class: 'btn btn-secondary' %>
