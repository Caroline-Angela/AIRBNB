<% @flats.each do |flat| %>
  <div class="card">
    <h2><%= flat.title %></h2>
    <p><%= flat.description %></p>
    <p><strong>Price:</strong> <%= number_to_currency(flat.price) %></p>
  </div>
<% end %>




